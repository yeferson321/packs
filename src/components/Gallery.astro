---
import type { Packs } from '../utils/types/definitions';
import Pagination from './Pagination.astro';

interface Props { 
    packs: Packs[];
    totalItems: number;  
    itemsPerPage: number;
};

const { packs, totalItems, itemsPerPage } = Astro.props;
---

<div class="mt-6 grid grid-cols-2 xs:grid-cols-4 gap-4">
    {packs.map((pack) => (
      <a href={`/view?view=${pack.id}`}>
        <div class="relative">
            <img class="h-auto max-w-full rounded-lg" src={pack.src} alt={pack.title} />
            <div class="absolute bottom-2 right-2 inline-flex items-center text-xs text-white bg-black bg-opacity-50 rounded-lg p-1">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 me-1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                </svg>
                {pack.percent}%
            </div>
        </div>
        <p class="mt-2 text-sm text-white">{pack.title}</p>
      </a>
    ))}
</div>

<Pagination totalItems={totalItems}, itemsPerPage={itemsPerPage}, maxPages={4}, minPages={3}/>
