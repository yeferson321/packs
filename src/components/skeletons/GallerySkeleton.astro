---
interface Props { 
    className: string;
    itemCount: number;
};

const { className, itemCount } = Astro.props;

const placeholders = Array.from({ length: itemCount }, (_, index) => index);
---

<div class={className}>
    {placeholders.map(() => (
        <div class="animate-pulse space-y-2.5">
            <div class="relative">
                <div class="aspect-[9/13] max-w-full rounded-lg bg-slate-700"></div>
            </div>
            <div class="grid grid-cols-4">
                <div class="h-4 bg-slate-700 rounded col-start-1 col-span-2"></div>
                <div class="h-4 bg-slate-700 rounded col-end-5"></div>
            </div>
            <div class="h-4 bg-slate-700 rounded"></div>
        </div>
    ))}
</div>
