---
import type { IconsProps } from '../utils/types/definitions';
import { tabElements } from '../utils/data/data';
import { IconCaseros, IconOnlyfans, IconTelegram, IconHome} from '../utils/icons/svg';

const { pathname } = Astro.url;

const iconMap: Record<string, ({ strokeWidth, className }: IconsProps) => JSX.Element> =  {
    INICIO: IconHome,
    CASEROS: IconCaseros,
    ONLYFANS: IconOnlyfans,
    TELEGRAM: IconTelegram,
};
---

<div class="max-w-3xl mx-auto">
    <ul class="flex flex-nowrap -mb-px text-xs xs:font-medium text-white">
        {tabElements.map((tab) => {
            const Icon = iconMap[tab.name];
            return (
                <li class="w-full">
                    <a href={tab.href} class={`w-full inline-flex items-center justify-center py-2.5 xs:py-2 border-b-2 hover:bg-neutral-400/10 ${ pathname === tab.href ? "border-amber-500" : "border-transparent" }`}>
                        {Icon && <Icon className="max-xs:hidden w-5 h-5 me-3 stroke-white" />}
                        {tab.name}
                    </a>
                </li>
            );
        })}
    </ul>
</div>
